<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="                            Driver                                "
        android:id="@+id/btn_driver"
        android:layout_marginTop="97dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="driver_function"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conductor"
        android:id="@+id/btn_conductor"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btn_driver"
        android:layout_alignStart="@+id/btn_driver"
        android:layout_alignRight="@+id/btn_driver"
        android:layout_alignEnd="@+id/btn_driver"
        android:clickable="true"
        android:onClick="conductor_function"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Administrator"
        android:id="@+id/btn_admin"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="87dp"
        android:layout_alignRight="@+id/btn_conductor"
        android:layout_alignEnd="@+id/btn_conductor"
        android:layout_alignLeft="@+id/btn_conductor"
        android:layout_alignStart="@+id/btn_conductor"
        android:clickable="true"
        android:onClick="admin_function"
        />

</RelativeLayout>
